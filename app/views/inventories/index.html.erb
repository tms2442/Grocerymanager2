<p id="notice"><%= notice %></p>

<h1>Inventories</h1>

<marquee>Welcome, user!</marquee>

<marquee scrollamount="4" direction="up">sign in</marquee> 


<marquee direction="down" height="50" behavior="alternate" style="border:solid">
  <marquee behavior="alternate">
    🍔
  </marquee>
</marquee>


<table id="table_inventories">
  <thead>
    <tr>
      <th>Item ID</th>
      <th>Name</th>
      <th>Item status</th>
      <th>Quantity</th>
      <th>Markup %</th>
      <th>Amount sold</th>
      <th>Current order amount</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.item_id %></td>
        <td><%= inventory.name %></td>
        <td><%= inventory.item_status %></td>
        <td><%= inventory.quantity %></td>
        <td><%= inventory.markup %></td>
        <td><%= inventory.amount_sold %></td>
        <td><%= inventory.current_order_amount %></td>
        <td><%= inventory.category %></td>
        <td><%= link_to 'Show', inventory %></td>
        <td><%= link_to 'Edit', edit_inventory_path(inventory) %></td>
        <td><%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Inventory', new_inventory_path %>
